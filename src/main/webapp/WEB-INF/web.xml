<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>NBC</display-name>
	<description>Novel Bioinformatics co.,ltd</description>
	
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/NBC-servlet.xml</param-value>
	</context-param>
	<!-- 读取上面配置的NBC-servlet的xml配置文件 -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
 	<!-- 配置NBC servlet -->
	<servlet>
		<servlet-name>NBC</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<!-- 将后缀名为.htm的网页请求去掉.htm后，纳入servlet请求范围内 -->
	<servlet-mapping>
		<servlet-name>NBC</servlet-name>
		<url-pattern>*.htm</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
   		<servlet-name>HelloWorld</servlet-name>
  		<servlet-class>com.novelbio.web.HelloWorld</servlet-class>
 	</servlet>
 	<servlet-mapping>
    	<servlet-name>HelloWorld</servlet-name>
    	<url-pattern>/HelloWorld2</url-pattern>
   </servlet-mapping>
</web-app>