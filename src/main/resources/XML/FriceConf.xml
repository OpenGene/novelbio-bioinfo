<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration    
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"    
    "http://mybatis.org/dtd/mybatis-3-config.dtd">  
    
<configuration>
	<typeAliases>
	<!-- FriceDB Single Table aliases-->
		<typeAlias alias="GeneInfo" type="com.novelbio.database.entity.friceDB.GeneInfo" />
		<typeAlias alias="Gene2Go" type="com.novelbio.database.entity.friceDB.Gene2Go" />
		<typeAlias alias="NCBIID" type="com.novelbio.database.entity.friceDB.NCBIID" />
		<typeAlias alias="UniProtID" type="com.novelbio.database.entity.friceDB.UniProtID" />
		<typeAlias alias="UniGeneInfo" type="com.novelbio.database.entity.friceDB.UniGeneInfo" />
		<typeAlias alias="UniGene2Go" type="com.novelbio.database.entity.friceDB.UniGene2Go" />
		<typeAlias alias="TaxInfo" type="com.novelbio.database.entity.friceDB.TaxInfo" />
	<!-- Frice Complex Query aliases -->
		<typeAlias alias="Gene2GoInfo" type="com.novelbio.database.entity.friceDB.Gene2GoInfo" />
		<typeAlias alias="Uni2GoInfo" type="com.novelbio.database.entity.friceDB.Uni2GoInfo" />
		<typeAlias alias="Go2Term" type="com.novelbio.database.entity.friceDB.Go2Term" />
		<typeAlias alias="BlastInfo" type="com.novelbio.database.entity.friceDB.BlastInfo" />
				
		
	</typeAliases>
	<environments default="FriceDB">
		<environment id="FriceDB">
			<transactionManager type="JDBC"/>
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver"/>
				<property name="url" value="jdbc:mysql://localhost:3306/FRICEDB"/>
				<property name="username" value="root"/>
				<property name="password" value=""/>
				<property name="poolMaximumIdleConnections" value="5"/>
				<property name="poolMaximumActiveConnections" value="5"/>
				<property name="poolMaximumCheckoutTime" value="20000"/>
			</dataSource>
		</environment>
	</environments>
<mappers>
	<mapper resource="XML/GeneInfo.xml"/>
	<mapper resource="XML/FriceSingleTable.xml"/>
	<mapper resource="XML/GeneID2GoInfo.xml"/>
</mappers>
</configuration>